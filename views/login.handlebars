<div class="column">
<h1 class="title is-2 pb-4 has-text-info"> * Login or Signup *</h1>
<form class="login-form">
  <div>
    <label for="email-login">Email:</label>
    <input type="text" id="email-login" />
  </div>
  <div>
    <label for="password-login">Password:</label>
    <input type="password" id="password-login" />
  </div>
  <div>
    <button type="submit" class="button is-primary is-light">Login</button>
    <a href="/signup"><button type="button" class="button is-danger is-light">Signup</button></a>
  </div>
</form>
</div>

